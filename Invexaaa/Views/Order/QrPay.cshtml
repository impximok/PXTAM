@model SnomiAssignmentReal.Models.CustomerOrder
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Text.Json
@{
    ViewData["Title"] = "Scan & Pay";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Compute displayed totals
    var subtotal = Model.OrderTotalAmount;
    var discount = Model.TotalDiscountAmount;
    var net = Model.NetPayableAmount > 0 ? Model.NetPayableAmount : subtotal;

    // Build the same payload amount the controller uses (net if present)
    var payload = (string)ViewBag.Payload ?? $"SNOMI|ORDER={Model.CustomerOrderId}|AMOUNT={(net > 0 ? net : subtotal):0.00}|CURRENCY=MYR";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<div class="container py-5">
    <h2 class="mb-4">
        <i class="bi bi-qr-code me-2"></i> Scan & Pay
    </h2>

    @* If points are reserved for this order, tell the customer their balance updates after confirm *@
    @if (Model.RewardPointsRedeemed > 0)
    {
        <div class="alert alert-info d-flex align-items-center gap-2">
            <i class="bi bi-stars"></i>
            <div>
                Points reserved for this order: <strong>@Model.RewardPointsRedeemed</strong>. Your balance will update after you confirm payment.
            </div>
        </div>
    }

    <div class="row g-4">
        <!-- Order details -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-dark text-white rounded-top-4">
                    <h5 class="mb-0"><i class="bi bi-bag-check"></i> Order</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2"><strong>Order Id:</strong> @Model.CustomerOrderId</div>
                    <div class="mb-2"><strong>Status:</strong> @Model.OrderStatus</div>

                    <hr />
                    <ul class="list-unstyled">
                        @foreach (var d in Model.CustomerOrderDetails)
                        {
                            var basePrice = d.MenuItem?.MenuItemUnitPrice ?? 0m;
                            var customTotal = d.AppliedCustomizations?.Sum(c => c.CustomizationAdditionalPrice) ?? 0m;
                            var unitPrice = basePrice + customTotal;
                            var subTotal = unitPrice * d.OrderedQuantity;

                            <li class="mb-2">
                                <div class="d-flex justify-content-between">
                                    <span>
                                        @d.MenuItem?.MenuItemName
                                        <span class="text-muted">x @d.OrderedQuantity</span>
                                    </span>
                                    <span>@subTotal.ToString("C")</span>
                                </div>
                                @if (d.AppliedCustomizations != null && d.AppliedCustomizations.Any())
                                {
                                    <div class="small text-muted">
                                        @foreach (var c in d.AppliedCustomizations)
                                        {
                                            <div>
                                                @c.CustomizationName
                                                @if (c.CustomizationAdditionalPrice > 0)
                                                {
                                                    <span>(+@c.CustomizationAdditionalPrice.ToString("C"))</span>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="small text-muted">No customisations</div>
                                }

                            </li>
                        }
                    </ul>

                    <hr />
                    <div class="d-flex justify-content-between">
                        <span>Subtotal</span><strong>@subtotal.ToString("C")</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Discount (points)</span><strong class="text-success">- @discount.ToString("C")</strong>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <span class="fs-5">Net to Pay</span><strong class="fs-5">@net.ToString("C")</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- QR area -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-dark text-white rounded-top-4">
                    <h5 class="mb-0"><i class="bi bi-wallet2"></i> Pay by QR</h5>
                </div>
                <div class="card-body text-center">
                    <p class="text-muted mb-3">
                        Scan this code with your banking app / e-wallet to pay <strong>@net.ToString("C")</strong>.
                    </p>

                    <!-- QR target -->
                    <div id="qrContainer" class="d-inline-block p-3 border rounded-3"></div>

                    <hr />
                    <div class="d-flex gap-2 justify-content-center">
                        <a asp-action="Checkout" asp-controller="Order" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Change Payment Method
                        </a>

                        <form asp-action="ConfirmQrPayment" asp-controller="Order" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.CustomerOrderId" />
                            <button class="btn btn-dark">
                                <i class="bi bi-check2-circle"></i> I’ve Paid – Continue
                            </button>
                        </form>

                        <a asp-action="Cart" asp-controller="Order" class="btn btn-outline-secondary">
                            <i class="bi bi-cart3"></i> Back to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lightweight client-side QR generator -->
<script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
<script>
    (function () {
        // Serialize the payload safely (string already built in server)
        var payload = @Html.Raw(JsonSerializer.Serialize(payload));
        var el = document.getElementById("qrContainer");
        if (el && payload) {
            new QRCode(el, {
                text: payload,
                width: 220,
                height: 220,
                correctLevel: QRCode.CorrectLevel.M
            });
        }
    })();
</script>
