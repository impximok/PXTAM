@model SnomiAssignmentReal.Models.CustomerOrder
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Your Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<div class="container py-5">
    <h2 class="mb-4 text-dark d-flex align-items-center gap-2">
        <i class="bi bi-cart3"></i>
        <span>Your Cart</span>
    </h2>

    @if (Model == null || Model.CustomerOrderDetails == null || !Model.CustomerOrderDetails.Any())
    {
        <div class="alert alert-light border rounded-4 px-4 py-3">
            Your cart is empty.
            <a href="@Url.Action("Catalog", "Menu")" class="alert-link">Browse the menu</a> to add items.
        </div>
    }
    else
    {
        decimal total = 0;

        <div class="table-responsive">
            <table class="table align-middle bg-white border-0 shadow-sm rounded-4 overflow-hidden cart-table">
                <thead class="table-light border-bottom">
                    <tr>
                        <th style="width:38%;">Item</th>
                        <th style="width:24%;">Customisations</th>
                        <th style="width:14%;">Qty</th>
                        <th class="text-end" style="width:12%;">Price</th>
                        <th class="text-end" style="width:12%;">Subtotal</th>
                        <th style="width:6%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.CustomerOrderDetails)
                    {
                        var basePrice = d.MenuItem?.MenuItemUnitPrice ?? 0m;
                        var customTotal = d.AppliedCustomizations?.Sum(c => c.CustomizationAdditionalPrice) ?? 0m;
                        var unitPrice = basePrice + customTotal;
                        var subTotal = unitPrice * d.OrderedQuantity;
                        total += subTotal;

                        <tr>
                            <!-- Item column -->
                            <td>
                                <div class="d-flex align-items-start">
                                    <div class="cart-thumb-wrapper me-3">
                                        <img src="@d.MenuItem?.MenuItemImageUrl"
                                             class="cart-thumb-img"
                                             alt="@d.MenuItem?.MenuItemName" />
                                    </div>
                                    <div class="cart-item-text">
                                        <div class="fw-semibold mb-1">@d.MenuItem?.MenuItemName</div>
                                        @if (!string.IsNullOrWhiteSpace(d.MenuItem?.MenuItemDescription))
                                        {
                                            <div class="text-muted small">@d.MenuItem?.MenuItemDescription</div>
                                        }
                                    </div>
                                </div>
                            </td>

                            <!-- Customisations column -->
                            <td class="align-top">
                                @if (d.AppliedCustomizations != null && d.AppliedCustomizations.Any())
                                {
                                    <div class="d-flex flex-column cart-custom-cell">
                                        <div class="d-flex flex-wrap gap-2 mb-2">
                                            @foreach (var c in d.AppliedCustomizations)
                                            {
                                                <span class="cart-custom-pill">
                                                    <span>@c.CustomizationName</span>
                                                    @if (c.CustomizationAdditionalPrice > 0)
                                                    {
                                                        <span class="text-muted">
                                                            (+@c.CustomizationAdditionalPrice.ToString("C"))
                                                        </span>
                                                    }
                                                </span>
                                            }
                                        </div>

                                        <a asp-action="EditCustomizations"
                                           asp-controller="Order"
                                           asp-route-orderDetailId="@d.OrderDetailId"
                                           class="cart-custom-btn">
                                            <i class="bi bi-pencil-square me-1"></i> Edit
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex flex-column cart-custom-cell">
                                        <div class="text-muted small mb-2">
                                            <i class="bi bi-sliders me-1"></i> No customisations
                                        </div>

                                        <a asp-action="EditCustomizations"
                                           asp-controller="Order"
                                           asp-route-orderDetailId="@d.OrderDetailId"
                                           class="cart-custom-btn cart-custom-btn-primary">
                                            <i class="bi bi-plus-lg me-1"></i> Add
                                        </a>
                                    </div>
                                }
                            </td>

                            <!-- Quantity -->
                            <td>
                                <form asp-action="UpdateQuantity" asp-controller="Order" method="post" class="update-form d-inline-flex align-items-center">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="orderDetailId" value="@d.OrderDetailId" />

                                    <div class="input-group input-group-sm cart-qty-group">
                                        <button type="button" class="btn qty-minus">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number"
                                               name="quantity"
                                               class="form-control text-center border-0"
                                               value="@d.OrderedQuantity"
                                               min="1" max="99" />
                                        <button type="button" class="btn qty-plus">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </form>
                            </td>

                            <!-- Price / subtotal -->
                            <td class="text-end">@unitPrice.ToString("C")</td>
                            <td class="text-end fw-semibold">@subTotal.ToString("C")</td>

                            <!-- Remove -->
                            <td class="text-end">
                                <form asp-action="RemoveFromCart" asp-controller="Order" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="orderDetailId" value="@d.OrderDetailId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle cart-remove-btn" title="Remove">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="border-top">
                    <tr>
                        <th colspan="4" class="text-end fw-normal text-muted">Total</th>
                        <th class="text-end fs-5 fw-semibold">@total.ToString("C")</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="@Url.Action("Catalog", "Menu")" class="btn btn-outline-dark rounded-pill px-4">
                <i class="bi bi-arrow-left"></i> Continue Shopping
            </a>

            <a asp-action="Checkout" asp-controller="Order" class="btn btn-dark rounded-pill px-5">
                <i class="bi bi-cash-stack me-1"></i> Checkout
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".update-form").forEach(form => {
                const minus = form.querySelector(".qty-minus");
                const plus  = form.querySelector(".qty-plus");
                const input = form.querySelector("input[name='quantity']");

                if (!input) return;

                minus?.addEventListener("click", () => {
                    let v = parseInt(input.value, 10) || 1;
                    if (v > 1) {
                        input.value = v - 1;
                        form.submit();
                    }
                });

                plus?.addEventListener("click", () => {
                    let v = parseInt(input.value, 10) || 1;
                    if (v < 99) {
                        input.value = v + 1;
                        form.submit();
                    }
                });

                input.addEventListener("change", () => {
                    if (parseInt(input.value, 10) >= 1) {
                        form.submit();
                    }
                });
            });
        });
    </script>

    <style>
        /* Overall table look */
        .cart-table {
            border-radius: 20px;
            border: 1px solid #e5e5e5;
        }

            .cart-table thead th {
                font-size: .85rem;
                text-transform: uppercase;
                letter-spacing: .06em;
                color: #6b6b6b;
                border-bottom-color: #e5e5e5 !important;
            }

            .cart-table tbody tr + tr td {
                border-top-color: #f0f0f0;
            }

        /* Thumbnail */
        .cart-thumb-wrapper {
            width: 64px;
            height: 64px;
            border-radius: 18px;
            overflow: hidden;
            background: #f5f5f7;
            border: 1px solid #e5e5e5;
        }

        .cart-thumb-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .cart-item-text {
            max-width: 260px;
        }

        /* Customisations cell */
        .cart-custom-cell {
            min-height: 56px;
        }

        .cart-custom-pill {
            display: inline-flex;
            align-items: center;
            gap: .25rem;
            padding: .25rem .7rem;
            border-radius: 999px;
            border: 1px solid #d1d1d6;
            background: #f9f9fa;
            font-size: .75rem;
            font-weight: 500;
            color: #111;
            white-space: nowrap;
        }

        .cart-custom-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: .35rem;
            padding: .25rem 0;
            border-radius: 999px;
            border: 0;
            background: transparent;
            font-size: .8rem;
            font-weight: 500;
            color: #111;
            text-decoration: none;
        }

            .cart-custom-btn:hover {
                text-decoration: underline;
            }

        .cart-custom-btn-primary {
            padding: .35rem 1.1rem;
            border: 1px solid #111;
            background: #111;
            color: #fff;
        }

            .cart-custom-btn-primary:hover {
                background: #fff;
                color: #111;
            }

        /* Quantity control */
        .cart-qty-group {
            border-radius: 999px;
            border: 1px solid #1c1c1e;
            overflow: hidden;
            background: #fdfdfd;
        }

            .cart-qty-group .btn {
                border: 0;
                border-radius: 0;
                padding-inline: .75rem;
                background: transparent;
            }

                .cart-qty-group .btn:hover {
                    background: #f2f2f2;
                }

            .cart-qty-group input {
                box-shadow: none;
                font-weight: 500;
            }

        /* Remove button */
        .cart-remove-btn {
            border-radius: 999px !important;
            border-color: #e5e5ea;
            color: #111;
            width: 32px;
            height: 32px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .cart-remove-btn:hover {
                background: #f5f5f7;
                border-color: #d1d1d6;
            }
    </style>
}
