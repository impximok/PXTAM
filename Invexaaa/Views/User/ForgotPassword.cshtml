@model ForgotPasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Forgot Password";
    
}

@if (TempData["Debug"] != null)
{
<div class="alert alert-warning">
    @TempData["Debug"]
</div>
}


<div class="page-center">
    <div class="auth-card">
        <h2 class="title">Forgot password</h2>
        <p class="subtitle">Enter your email and we’ll send you a reset link.</p>

        @if (TempData["Info"] != null)
        {
            <div class="alert alert-success">@TempData["Info"]</div>
        }

        <form asp-action="ForgotPassword" asp-controller="User" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email address" />
                <label asp-for="Email">Email address</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn-black w-100">
                Send reset link
            </button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" asp-controller="User" class="back-link">
                ← Back to login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        background: #f5f5f7;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial;
    }

    .page-center {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
    }

    .auth-card {
        background: #fff;
        max-width: 420px;
        width: 100%;
        padding: 2.5rem 2.2rem;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,.08);
    }

    .title {
        font-size: 1.9rem;
        font-weight: 700;
        margin-bottom: .3rem;
        color: #111;
    }

    .subtitle {
        color: #555;
        font-size: 1.05rem;
        margin-bottom: 1.4rem;
    }

    .form-control {
        border-radius: 12px;
        border: 1.2px solid #d0d0d0;
    }

        .form-control:focus {
            border-color: #000;
            box-shadow: none;
        }

    .btn-black {
        background: #000;
        color: #fff;
        border-radius: 999px;
        padding: .7rem 1rem;
        font-weight: 600;
        border: 2px solid transparent;
        transition: all .2s;
    }

        .btn-black:hover {
            background: #fff;
            color: #000;
            border-color: #000;
        }

    .back-link {
        color: #6c757d;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .alert-success {
        background: #f1fff5;
        border: 1px dashed #2ecc71;
        color: #1e7e34;
        border-radius: 12px;
        padding: .75rem;
        text-align: center;
        margin-bottom: 1rem;
    }
</style>
