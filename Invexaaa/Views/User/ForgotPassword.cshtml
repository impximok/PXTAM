@model ForgotPasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="page-center">
    <div class="auth-card">

        <div class="head">
            <h2 class="title">Forgot Password</h2>
            <p class="subtitle">Enter your email and we’ll send you a reset link.</p>
        </div>

        @if (TempData["Info"] != null)
        {
            <div class="alert-success">@TempData["Info"]</div>
        }

        @if (TempData["Debug"] != null)
        {
            <div class="alert-warning">@TempData["Debug"]</div>
        }

        <form asp-action="ForgotPassword" asp-controller="User" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="field">
                <label asp-for="Email" class="label">Email Address</label>
                <input asp-for="Email" class="control" placeholder="name@example.com" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-black w-100">
                Send Reset Link
            </button>
        </form>

        <div class="foot">
            <a asp-action="Login" asp-controller="User" class="back-link">← Back to login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    :root {
        --bg: #fff;
        --card: #fff;
        --text: #111;
        --muted: #666;
        --border: #e6e6e6;
        --radius: 18px;
        --danger: #dc2626;
        --font-main: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    html, body {
        font-family: var(--font-main);
        font-size: 16px;
        line-height: 1.45;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    .page-center {
        position: fixed; /* ✅ ignores layout wrappers */
        inset: 0; /* top:0; right:0; bottom:0; left:0 */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
        background: var(--bg);
        z-index: 999; /* stays above layout spacing */
    }


    .auth-card {
        width: 100%;
        max-width: 440px;
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 22px;
        padding: 32px 30px; /* ⬅ more air, still compact */
        box-shadow: 0 10px 28px rgba(0,0,0,.06);
    }

    .head {
        padding-bottom: 18px;
        margin-bottom: 22px; /* ⬅ clearer section break */
        border-bottom: 1px solid var(--border);
    }

    .title {
        margin: 0;
        font-size: 34px;
        font-weight: 800;
        letter-spacing: .2px;
        line-height: 1.15;
    }

    .subtitle {
        margin: 6px 0 0;
        font-size: 14px;
        color: var(--muted);
        line-height: 1.45;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 4px;
    }

    .label {
        font-size: 14px; /* ✅ visible again */
        font-weight: 500;
        color: var(--text);
        line-height: 1.2;
    }


    .control {
        width: 100%;
        border: 2px solid var(--border);
        border-radius: 18px;
        padding: 14px 16px;
        font-size: 16px;
        outline: none;
        background: #fff;
        transition: border-color .18s ease, box-shadow .18s ease;
    }

        /* focus = black border */
        .control:focus {
            border-color: #000;
        }

        /* mvc error border */
        .control.input-validation-error {
            border-color: var(--danger);
        }

            .control.input-validation-error:focus {
                border-color: var(--danger);
            }

    .text-danger {
        color: var(--danger);
        font-size: 13px;
        font-weight: 400; /* ✅ regular */
        margin-top: 2px;
    }

    .btn-black {
        margin-top: 8px;
        background: #111;
        border: 2px solid #111;
        color: #fff;
        border-radius: 999px;
        padding: 14px 18px;
        font-weight: 800;
        font-size: 16px;
        width: 100%;
        transition: background-color 220ms ease, color 220ms ease, border-color 220ms ease;
    }

        .btn-black:hover {
            background: #fff;
            color: #111;
            border-color: #111;
        }

        .btn-black:active {
            transform: translateY(1px);
        }

    .foot {
        margin-top: 22px;
        text-align: center;
    }

    .back-link {
        color: #111;
        text-decoration: underline;
        font-size: 14px;
        transition: color .2s ease;
    }

        .back-link:hover {
            color: #2563eb; /* 🔵 clean blue hover */
        }


    .alert-success {
        background: #f6fff8;
        border: 1px dashed #111;
        color: #111;
        border-radius: 14px;
        padding: 12px 12px;
        text-align: center;
        font-size: 13px;
        margin-bottom: 16px;
    }

    .alert-warning {
        background: #fff7ed;
        border: 1px dashed #111;
        color: #111;
        border-radius: 14px;
        padding: 12px 12px;
        text-align: center;
        font-size: 13px;
        margin-bottom: 16px;
    }


    /* Labels */
    .label {
        font-weight: 600;
    }

    /* Inputs + placeholders */
    .control,
    .control::placeholder {
        font-weight: 400;
    }

    /* Buttons */
    .btn-black {
        font-weight: 600;
    }

    /* Shared text rhythm */
    .card-sub,
    .subtitle {
        font-size: 13px;
        color: #777;
    }

    .text-danger {
        font-weight: 400;
    }

</style>
