@model ResetPasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Reset Password";
    ViewBag.HideHeader = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="page-center">
    <div class="auth-card">

        <!-- Header -->
        <div class="head">
            <h2 class="title">Set New Password</h2>
            <p class="subtitle">Choose a strong password for your account.</p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert-danger">@TempData["Error"]</div>
        }

        <form asp-action="ResetPassword" asp-controller="User" method="post" novalidate>
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <!-- New Password -->
            <div class="field">
                <label asp-for="NewPassword" class="label">New password</label>

                <div class="input-wrap">
                    <input asp-for="NewPassword"
                           type="password"
                           class="control"
                           id="NewPassword"
                           placeholder="Enter new password"
                           autocomplete="new-password" />

                    <button type="button"
                            class="eye-btn toggle-eye"
                            data-target="NewPassword"
                            aria-label="Toggle password visibility">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>

                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="field">
                <label asp-for="ConfirmPassword" class="label">Confirm password</label>

                <div class="input-wrap">
                    <input asp-for="ConfirmPassword"
                           type="password"
                           class="control"
                           id="ConfirmPassword"
                           placeholder="Re-enter password"
                           autocomplete="new-password" />

                    <button type="button"
                            class="eye-btn toggle-eye"
                            data-target="ConfirmPassword"
                            aria-label="Toggle password visibility">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>

                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-black w-100">
                Update password
            </button>
        </form>

        <div class="foot">
            <a asp-action="Login" asp-controller="User" class="back-link">← Back to login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".toggle-eye").forEach(btn => {
                btn.addEventListener("click", function () {
                    const input = document.getElementById(this.dataset.target);
                    const icon = this.querySelector("i");
                    if (!input || !icon) return;

                    const show = input.type === "password";
                    input.type = show ? "text" : "password";

                    icon.classList.toggle("bi-eye", !show);
                    icon.classList.toggle("bi-eye-slash", show);
                });
            });
        });
    </script>
}

<style>
    :root {
        --bg: #fff;
        --card: #fff;
        --text: #111;
        --muted: #777;
        --border: #e6e6e6;
        --radius: 18px;
        --danger: #dc2626;
        --font-main: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    /* ===== BASE ===== */
    html, body {
        height: 100%;
        margin: 0;
        background: var(--bg);
        font-family: var(--font-main);
        color: var(--text);
    }

    .page-center {
        position: fixed;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
    }

    .auth-card {
        width: 100%;
        max-width: 520px;
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 22px;
        padding: 26px;
        box-shadow: 0 10px 28px rgba(0,0,0,.06);
    }

    /* ===== HEADER ===== */
    .head {
        padding-bottom: 16px;
        margin-bottom: 18px;
        border-bottom: 1px solid var(--border);
    }

    .title {
        margin: 0;
        font-size: 34px;
        font-weight: 800;
    }

    .subtitle {
        margin-top: 6px;
        font-size: 13px;
        color: var(--muted);
    }

    /* ===== FORM ===== */
    .field {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 16px;
    }

    .label {
        font-size: 14px;
        font-weight: 500;
    }

    /* 🔥 KEY WRAPPER */
    .input-wrap {
        position: relative;
    }

    /* input */
    .control {
        width: 100%;
        height: 56px;
        border: 2px solid var(--border);
        border-radius: var(--radius);
        padding: 0 56px 0 18px;
        font-size: 17px;
        background: #fff;
    }

        .control:focus {
            border-color: #000;
        }

        .control.input-validation-error {
            border-color: var(--danger);
        }

    /* eye */
    .eye-btn {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        height: 56px;
        display: flex;
        align-items: center;
        background: transparent;
        border: 0;
        padding: 0 6px;
        cursor: pointer;
        color: #666;
    }

        .eye-btn:hover {
            color: #111;
        }

        .eye-btn i {
            font-size: 19px;
        }

    /* ===== ERRORS ===== */
    .text-danger {
        color: var(--danger);
        font-size: 13px;
    }

    /* ===== BUTTON ===== */
    .btn-black {
        margin-top: 8px;
        background: #111;
        border: 2px solid #111;
        color: #fff;
        border-radius: 999px;
        padding: 14px 18px;
        font-weight: 800;
        font-size: 16px;
        width: 100%;
    }

        .btn-black:hover {
            background: #fff;
            color: #111;
        }

    /* ===== FOOTER ===== */
    .foot {
        margin-top: 16px;
        text-align: center;
    }

    .back-link {
        color: #111;
        text-decoration: underline;
        font-size: 14px;
    }

        .back-link:hover {
            color: #2563eb;
        }

    /* ===== ALERT ===== */
    .alert-danger {
        background: #fff1f1;
        border: 1px dashed #111;
        border-radius: 14px;
        padding: 12px;
        text-align: center;
        font-size: 13px;
        margin-bottom: 16px;
    }
</style>
