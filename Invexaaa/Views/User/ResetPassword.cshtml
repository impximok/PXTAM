@model ResetPasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Reset Password";
    
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<div class="page-center">
    <div class="auth-card">
        <h2 class="title">Set new password</h2>
        <p class="subtitle">Choose a strong password for your account.</p>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <form asp-action="ResetPassword" asp-controller="User" method="post" novalidate>
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="form-floating mb-3 has-eye">
                <input asp-for="NewPassword" type="password" class="form-control" id="NewPassword" placeholder="New password" />
                <label asp-for="NewPassword">New password</label>
                <i class="bi bi-eye toggle-eye" data-target="NewPassword"></i>
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3 has-eye">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm password" />
                <label asp-for="ConfirmPassword">Confirm password</label>
                <i class="bi bi-eye toggle-eye" data-target="ConfirmPassword"></i>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn-black w-100">
                Update password
            </button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" asp-controller="User" class="back-link">
                ← Back to login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelectorAll('.toggle-eye').forEach(icon => {
            icon.addEventListener('click', function () {
                const input = document.getElementById(this.dataset.target);
                const show = input.type === 'password';
                input.type = show ? 'text' : 'password';
                this.classList.toggle('bi-eye');
                this.classList.toggle('bi-eye-slash');
            });
        });
    </script>
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        background: #f5f5f7;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial;
    }

    .page-center {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
    }

    .auth-card {
        background: #fff;
        max-width: 460px;
        width: 100%;
        padding: 2.6rem 2.3rem;
        border-radius: 22px;
        box-shadow: 0 10px 30px rgba(0,0,0,.08);
    }

    .title {
        font-size: 1.9rem;
        font-weight: 700;
        margin-bottom: .3rem;
    }

    .subtitle {
        color: #555;
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 12px;
        border: 1.2px solid #d0d0d0;
        padding-right: 2.6rem;
    }

        .form-control:focus {
            border-color: #000;
            box-shadow: none;
        }

    .has-eye {
        position: relative;
    }

    .toggle-eye {
        position: absolute;
        right: .9rem;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #666;
    }

    .btn-black {
        background: #000;
        color: #fff;
        border-radius: 999px;
        padding: .75rem;
        font-weight: 600;
        border: 2px solid transparent;
        transition: all .2s;
    }

        .btn-black:hover {
            background: #fff;
            color: #000;
            border-color: #000;
        }

    .back-link {
        color: #6c757d;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .alert-danger {
        background: #fff1f1;
        border: 1px dashed #dc3545;
        color: #842029;
        border-radius: 12px;
        padding: .75rem;
        text-align: center;
        margin-bottom: 1rem;
    }
</style>
