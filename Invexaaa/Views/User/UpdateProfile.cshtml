@model Invexaaa.Models.ViewModels.UpdateProfileViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Update Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string urlPath = string.IsNullOrWhiteSpace(Model.ProfileImageUrl)
        ? "/images/default-profile.png"
        : Model.ProfileImageUrl;

    string cacheBust = DateTime.UtcNow.Ticks.ToString();
}

<!-- IMPORTANT: NO CENTERING WRAPPER -->
<div class="profile-page">

    <div class="profile-card">
        <!-- HEADER -->
        <header class="profile-header">
            <h1 class="profile-title">Update Profile</h1>
            <p class="profile-subtitle">Manage your personal information and profile photo.</p>
        </header>

        @if (TempData["Info"] != null)
        {
            <div class="alert monocrome-alert text-center">
                @TempData["Info"]
            </div>
        }

        <form asp-action="UpdateProfile"
              asp-controller="User"
              method="post"
              enctype="multipart/form-data"
              novalidate>

            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <!-- PROFILE IMAGE -->
            <section class="avatar-block">
                <div class="avatar-wrap">
                    <img id="avatarPreview"
                         src="@urlPath?v=@cacheBust"
                         class="ap-avatar"
                         alt="Profile picture" />
                </div>

                <div class="avatar-meta">
                    <label class="field-label">Profile Image</label>

                    <input type="file"
                           id="fileInput"
                           name="ProfileImage"
                           accept="image/*"
                           class="file-input-hidden" />

                    <input type="hidden"
                           id="capturedData"
                           name="CapturedImageDataUrl" />

                    <div id="dropzone" class="dropzone" tabindex="0">
                        <div class="dz-main">
                            <div class="dz-icon">⬆︎</div>
                            <div class="dz-text">
                                <div class="dz-title">Upload a photo</div>
                                <div class="dz-sub">PNG / JPG · Max 2MB</div>
                            </div>
                        </div>
                    </div>

                    <div class="file-actions">
                        <button type="button" class="btn-ghost" id="browseBtn">Browse</button>
                        <button type="button" class="btn-ghost" id="cameraButton">📷 Camera</button>
                        <span id="fileName" class="file-name">No file selected</span>
                    </div>
                </div>
            </section>

            <!-- EMAIL -->
            <div class="field">
                <label asp-for="Email" class="field-label">Email</label>
                <input asp-for="Email" class="text-input" readonly />
            </div>

            <!-- NAME -->
            <div class="field">
                <label asp-for="Name" class="field-label">Display Name</label>
                <input asp-for="Name" class="text-input" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- ACTIONS -->
            <div class="actions">
                <a asp-controller="Dashboard"
                   asp-action="Index"
                   class="btn-ghost">
                    Cancel
                </a>

                <button type="submit" class="btn-primary">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (() => {
            const $ = id => document.getElementById(id);

            const input = $('fileInput');
            const browseBtn = $('browseBtn');
            const avatar = $('avatarPreview');
            const fileName = $('fileName');
            const captured = $('capturedData');

            browseBtn.onclick = () => input.click();

            input.onchange = e => {
                const file = e.target.files[0];
                if (!file) return;

                fileName.textContent = file.name;
                const reader = new FileReader();
                reader.onload = ev => {
                    avatar.src = ev.target.result;
                    captured.value = ev.target.result;
                };
                reader.readAsDataURL(file);
            };
        })();
    </script>
}

<style>
    /* PAGE FLOW — works with sidebar */
    .profile-page {
        max-width: 900px;
        margin: 0;
    }

    /* CARD */
    .profile-card {
        background: #fff;
        border: 1px solid #e6e6e6;
        border-radius: 16px;
        padding: 32px;
    }

    /* HEADER */
    .profile-header {
        margin-bottom: 24px;
    }

    .profile-title {
        font-size: 1.8rem;
        font-weight: 700;
    }

    .profile-subtitle {
        color: #6b7280;
    }

    /* AVATAR */
    .avatar-block {
        display: grid;
        grid-template-columns: 140px 1fr;
        gap: 24px;
        padding: 20px;
        background: #fafafa;
        border-radius: 14px;
        border: 1px solid #e6e6e6;
        margin-bottom: 28px;
    }

    @@media (max-width: 640px) {
        .avatar-block

    {
        grid-template-columns: 1fr;
        text-align: center;
    }

    }

    .ap-avatar {
        width: 128px;
        height: 128px;
        border-radius: 50%;
        border: 1px solid #ddd;
        object-fit: cover;
    }

    /* FORM */
    .field {
        margin-bottom: 20px;
    }

    .field-label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
    }

    .text-input {
        width: 100%;
        padding: 12px 14px;
        border-radius: 12px;
        border: 1px solid #ccc;
    }

    /* ACTIONS */
    .actions {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        padding-top: 20px;
        margin-top: 28px;
        border-top: 1px solid #e6e6e6;
    }

    @@media (max-width: 640px) {
        .actions

    {
        flex-direction: column-reverse;
    }

    }

    /* BUTTONS */
    .btn-primary {
        background: #111;
        color: #fff;
        border-radius: 999px;
        padding: 12px 22px;
        border: none;
    }

    .btn-ghost {
        background: transparent;
        border: 1px solid #ccc;
        border-radius: 999px;
        padding: 12px 22px;
    }

    /* ALERT */
    .monocrome-alert {
        background: #f7f7f7;
        border: 1px solid #e6e6e6;
        padding: 10px;
        border-radius: 12px;
    }
</style>
