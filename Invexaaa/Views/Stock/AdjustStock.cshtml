@model Invexaaa.Models.ViewModels.AdjustStockViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Adjust Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .adjust-stock-page {
        max-width: 640px;
    }

    label {
        font-weight: 500;
    }

    .info-box {
        background: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 14px;
        text-align: center;
        font-weight: 600;
        font-size: 18px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 12px;
        margin-bottom: 16px;
    }

    .info-label {
        font-size: 12px;
        color: #6b7280;
        margin-top: 4px;
    }
</style>

<div class="container-fluid adjust-stock-page">

    <h3 class="mb-1">Adjust Stock</h3>
    <div class="text-muted mb-3">
        @Model.ItemName (@Model.ItemUnitOfMeasure)
    </div>

    <div class="alert alert-warning small">
        Use this only for stock corrections (damage, miscount, system fix).
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form asp-action="AdjustStock" method="post">
        @Html.AntiForgeryToken()

        <!-- 🔑 INVENTORY IDS -->
        @foreach (var id in Model.InventoryIds)
        {
            <input type="hidden" name="InventoryIds" value="@id" />
        }

        <!-- INFO GRID -->
        <div class="info-grid">
            <div>
                <div class="info-box">@Model.CurrentQuantity</div>
                <div class="info-label">Current Qty</div>
            </div>
            <div>
                <div class="info-box">@Model.ItemReorderLevel</div>
                <div class="info-label">Reorder Level</div>
            </div>
            <div>
                <div class="info-box">@Model.SafetyStock</div>
                <div class="info-label">Safety Stock</div>
            </div>
            <div>
                <div class="info-box">@Model.ReorderPoint</div>
                <div class="info-label">Reorder Point</div>
            </div>
        </div>

        <!-- ADJUST -->
        <div class="mb-3">
            <label>Adjust By (+ / -)</label>
            <input asp-for="AdjustBy" class="form-control" />
            <span asp-validation-for="AdjustBy" class="text-danger"></span>
        </div>

        <!-- NOTE -->
        <div class="mb-3">
            <label>Adjustment Reason</label>
            <textarea asp-for="AdjustmentNote"
                      rows="3"
                      class="form-control"
                      placeholder="Reason for adjustment"></textarea>
            <span asp-validation-for="AdjustmentNote" class="text-danger"></span>
        </div>

        <!-- ACTIONS -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                Save Adjustment
            </button>
            <a asp-action="StockIndex" class="btn btn-outline-secondary">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
