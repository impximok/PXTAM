@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Invexaaa.Models.ViewModels.StockBatchListViewModel>

@{
    ViewData["Title"] = "Stock Batch List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold">Stock Batch & Expiry</h3>
        <span class="text-muted small">Expiry Monitoring</span>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-secondary small">
                    <tr>
                        <th>Item</th>
                        <th>Batch No</th>
                        <th>Qty</th>
                        <th>Expiry</th>
                        <th>Status</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var b in Model)
                    {
                        var daysLeft = (b.ExpiryDate - DateTime.Today).Days;

                        var statusClass =
                        daysLeft < 0 ? "bg-danger" :
                        daysLeft <= 30 ? "bg-warning" :
                        "bg-success";

                        <tr>
                            <td class="fw-semibold">@b.ItemName</td>
                            <td>@b.BatchNumber</td>
                            <td>@b.BatchQuantity</td>
                            <td>@b.ExpiryDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge @statusClass">
                                    @b.BatchStatus
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
