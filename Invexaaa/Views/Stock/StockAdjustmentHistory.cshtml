@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Invexaaa.Models.ViewModels.StockAdjustmentHistoryViewModel>

@{
    ViewData["Title"] = "Stock Adjustment History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .inactive-row {
        opacity: 0.55;
        background: #f1f5f9;
    }

    .inactive-badge {
        background: #e5e7eb;
        color: #374151;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
    }
</style>


<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold">Stock Adjustment History</h3>
        <span class="text-muted small">Audit Trail (Read Only)</span>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-secondary small">
                    <tr>
                        <th>Date</th>
                        <th>Item</th>
                        <th>Batch No</th>   <!-- ✅ NEW -->
                        <th>Before</th>
                        <th>After</th>
                        <th>Diff</th>
                        <th>Status</th>
                        <th>Reason</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var h in Model)
                    {
                        bool isInactive = h.ItemStatus == "Inactive";

                        var diffClass =
                        h.QuantityDifference > 0 ? "text-success" :
                        h.QuantityDifference < 0 ? "text-danger" :
                        "text-muted";

                        <tr class="@(isInactive ? "inactive-row" : "")">

                            <td>@h.AdjustmentDate.ToString("dd/MM/yyyy")</td>

                            <td class="fw-semibold">
                                @h.ItemName
                                @if (isInactive)
                                {
                                    <div class="mt-1">
                                        <span class="inactive-badge">INACTIVE</span>
                                    </div>
                                }
                        </td>

                        <td>
                            <span class="badge bg-light text-dark">
                                @h.BatchNumber
                            </span>
                        </td>

                        <td>@h.QuantityBefore</td>
                        <td>@h.QuantityAfter</td>

                        <td class="@diffClass">
                            @h.QuantityDifference
                        </td>

                        <td>
                            <span class="badge
                @(h.AdjustmentStatus == "Approved" ? "bg-success" :
                                                    h.AdjustmentStatus == "Pending" ? "bg-warning" :
                                                    "bg-secondary")">
                                @h.AdjustmentStatus
                            </span>
                        </td>

                            <td class="text-muted small">
                                @h.AdjustmentReason
                            </td>

                        </tr>
                                        }
                </tbody>


            </table>
        </div>
    </div>

</div>
