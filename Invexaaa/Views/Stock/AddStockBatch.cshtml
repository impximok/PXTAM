@model Invexaaa.Models.ViewModels.AddStockBatchViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid add-stock-page">

    <h3 class="mb-3">Add Stock (With Expiry)</h3>

    <!-- VALIDATION -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <form asp-controller="Stock" asp-action="AddStockBatch" method="post">
        @Html.AntiForgeryToken()

        <!-- 🔑 CRITICAL: correct binding -->
        @foreach (var id in Model.InventoryIds)
        {
            <input type="hidden" name="InventoryIds" value="@id" />
        }

        <!-- QUANTITY -->
        <div class="mb-3">
            <label class="form-label">Quantity to Add</label>
            <input asp-for="Quantity"
                   type="number"
                   min="1"
                   class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <!-- EXPIRY -->
        <div class="mb-3">
            <label class="form-label">Expiry Date</label>
            <input asp-for="ExpiryDate"
                   type="date"
                   class="form-control"
                   min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>

        <!-- ACTIONS -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                Save Stock
            </button>
            <a asp-action="StockIndex" class="btn btn-outline-secondary">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
