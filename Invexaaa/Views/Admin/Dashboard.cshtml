@{
    ViewBag.Title = "Dashboard";
    var userName = User.Identity?.Name ?? "User";

    bool canManageMenu = ViewBag.CanManageMenu == true; // Admin
    bool canViewOrders = ViewBag.CanViewOrders == true; // Admin+Staff
    bool canOrderHistory = ViewBag.CanOrderHistory == true; // Admin+Staff
    bool canViewReport = ViewBag.CanViewReport == true; // Admin
    bool canManageAccounts = ViewBag.CanManageAccounts == true; // Admin
    bool canTrackOrders = ViewBag.CanTrackOrders == true; // Admin+Staff

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    :root {
        --line: #e6e6e6;
        --radius: 18px;
        --shadow: 0 10px 24px rgba(0,0,0,.06);
    }

    .card-mono {
        border: 1px solid var(--line) !important;
        border-radius: var(--radius) !important;
        box-shadow: var(--shadow);
    }

        .card-mono .card-body {
            padding: 1.25rem;
        }

        .card-mono .card-title {
            font-weight: 700;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: .5rem;
            justify-content: center;
        }

    .btn-mono {
        border: 1.5px solid #000;
        background: #000;
        color: #fff;
        border-radius: 999px;
        padding: .8rem 1.2rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn-mono:hover {
            background: #111;
            color: #fff;
        }

    .alert-mono {
        background: #f7f7f7;
        border: 1px solid var(--line);
        border-radius: 12px;
        padding: .9rem 1rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: .6rem;
    }
</style>

<div class="container py-3">

    <div class="alert-mono">
        <i class="bi bi-info-circle"></i>
        <span>Hello, <strong>@userName</strong>!</span>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-3">

        @* Update Profile — always visible *@
        <div class="col">
            <div class="card card-mono h-100 text-center">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="bi bi-person-gear"></i> Update Profile</h5>
                    <p class="text-muted">Change your name or upload a new profile image.</p>
                    <div class="mt-auto">
                        <a href="/Account/UpdateProfile" class="btn-mono">Open</a>
                    </div>
                </div>
            </div>
        </div>

        @* Admin only *@
        @if (canManageAccounts)
        {
            <div class="col">
                <div class="card card-mono h-100 text-center">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="bi bi-people"></i> Manage Accounts</h5>
                        <p class="text-muted">Manage accounts.</p>
                        <div class="mt-auto">
                            <a href="/Admin/ManageCustomers" class="btn-mono">Open</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Admin only *@
        @if (canViewReport)
        {
            <div class="col">
                <div class="card card-mono h-100 text-center">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="bi bi-graph-up"></i> View Report</h5>
                        <p class="text-muted">Access report.</p>
                        <div class="mt-auto">
                            <a href="/Admin/Report" class="btn-mono">Open</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Admin only *@
        @if (canManageMenu)
        {
            <div class="col">
                <div class="card card-mono h-100 text-center">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="bi bi-basket"></i> Manage Menu</h5>
                        <p class="text-muted">Add, edit, delete menu items.</p>
                        <div class="mt-auto">
                            <a href="/Menu/Index" class="btn-mono">Open</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Admin + Staff *@
        @if (canOrderHistory)
        {
            <div class="col">
                <div class="card card-mono h-100 text-center">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="bi bi-clock-history"></i> Order History</h5>
                        <p class="text-muted">Access past orders.</p>
                        <div class="mt-auto">
                            <a href="/Order/ManageOrderHistory" class="btn-mono">Open</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Admin + Staff *@
        @if (canTrackOrders)
        {
            <div class="col">
                <div class="card card-mono h-100 text-center">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="bi bi-box-seam"></i> Track Orders</h5>
                        <p class="text-muted">Track active orders in real time.</p>
                        <div class="mt-auto">
                            <a href="/Order/ManageTracks" class="btn-mono">Open</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* Admin + Staff *@
        @if (canViewOrders)
        {
            <div class="col">
                <div class="card card-mono h-100 text-center">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="bi bi-receipt"></i> Manage Orders</h5>
                        <p class="text-muted">View and change status of orders.</p>
                        <div class="mt-auto">
                            <a href="/Order/ManageOrders" class="btn-mono">Open</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
