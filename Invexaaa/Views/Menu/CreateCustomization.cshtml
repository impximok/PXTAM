@model SnomiAssignmentReal.Models.OrderCustomizationSettings
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = ViewBag.MenuItem as SnomiAssignmentReal.Models.MenuItem;
    ViewData["Title"] = "Add Customization · " + (item?.MenuItemName ?? "");
    var catOpts = (IEnumerable<SelectListItem>)(ViewBag.CategoriesForEligible ?? new List<SelectListItem>());
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    /* ✅ Hide the validation summary when there are no errors */
    .validation-summary-valid {
        display: none;
    }
</style>

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Manage Menu</a></li>
            <li class="breadcrumb-item"><a asp-action="Customizations" asp-route-menuItemId="@item?.MenuItemId">Customizations</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add</li>
        </ol>
    </nav>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success">@TempData["Info"]</div>
    }

    <div class="card p-4" style="border:1px solid #e5e7eb;border-radius:1rem;">
        <h3 class="mb-3">Add Customization</h3>

        <dl class="row small">
            <dt class="col-sm-2">Item</dt>
            <dd class="col-sm-10">@item?.MenuItemName (@item?.MenuItemId)</dd>
            <dt class="col-sm-2">Item Category</dt>
            <dd class="col-sm-10">@item?.CategoryId</dd>
        </dl>
        <hr />

        <form asp-action="CreateCustomization" method="post" novalidate>
            @Html.AntiForgeryToken()

            <!-- important: identify the target item -->
            <input type="hidden" asp-for="MenuItemId" />

            <!-- show ALL issues (model + fields); auto-hidden when none -->
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="CustomizationName" class="form-label">Name <span class="text-danger">*</span></label>
                <input asp-for="CustomizationName" class="form-control" />
                <span asp-validation-for="CustomizationName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CustomizationDescription" class="form-label">Description</label>
                <input asp-for="CustomizationDescription" class="form-control" />
                <span asp-validation-for="CustomizationDescription" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CustomizationAdditionalPrice" class="form-label">Price (RM) <span class="text-danger">*</span></label>
                <input asp-for="CustomizationAdditionalPrice" type="number" step="0.01" min="0" class="form-control" />
                <span asp-validation-for="CustomizationAdditionalPrice" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Eligible Category <span class="text-danger">*</span></label>
                <select asp-for="EligibleCategoryId" class="form-select" required>
                    <option value="">— Select a category —</option>
                    @foreach (var opt in catOpts)
                    {
                        <option value="@opt.Value" selected="@(string.Equals(opt.Value, Model?.EligibleCategoryId, StringComparison.OrdinalIgnoreCase))">
                            @opt.Text
                        </option>
                    }
                </select>
                <span asp-validation-for="EligibleCategoryId" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-dark rounded-pill" type="submit">Create</button>
                <a asp-action="Customizations" asp-route-menuItemId="@Model?.MenuItemId" class="btn btn-outline-dark rounded-pill">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
