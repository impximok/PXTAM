@model SnomiAssignmentReal.Models.OrderCustomizationSettings
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = ViewBag.MenuItem as SnomiAssignmentReal.Models.MenuItem;
    ViewData["Title"] = "Delete Customization · " + (item?.MenuItemName ?? "");
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Manage Menu</a></li>
            <li class="breadcrumb-item"><a asp-action="Customizations" asp-route-menuItemId="@item?.MenuItemId">Customizations</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>

    <div class="card p-4" style="border:1px solid #e5e7eb; border-radius:1rem;">
        <h4 class="mb-3">Delete this customization?</h4>
        <dl class="row">
            <dt class="col-sm-3">Customization</dt>
            <dd class="col-sm-9">@Model.CustomizationName</dd>
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.CustomizationDescription</dd>
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">RM @Model.CustomizationAdditionalPrice.ToString("0.00")</dd>
            <dt class="col-sm-3">Eligible Category ID</dt>
            <dd class="col-sm-9">@Model.EligibleCategoryId</dd>
        </dl>

        <form asp-action="DeleteCustomization" method="post" class="d-flex gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.MenuItemCustomizationId" />
            <button class="btn btn-dark rounded-pill" type="submit">Delete</button>
            <a asp-action="Customizations" asp-route-menuItemId="@item?.MenuItemId" class="btn btn-outline-dark rounded-pill">Cancel</a>
        </form>
    </div>
</div>
