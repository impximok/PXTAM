@model IEnumerable<SnomiAssignmentReal.Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var q = (string)(ViewBag.FilterQ ?? "");
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Categories</h1>
        <div>
            <a asp-action="CreateCategory" class="btn btn-dark rounded-pill">
                <i class="bi bi-plus"></i> New Category
            </a>
            <a asp-action="Index" class="btn btn-outline-dark rounded-pill">Back to Menu Items</a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success">@TempData["Info"]</div>
    }

    <form method="get" class="row g-2 mb-3">
        <div class="col-sm-8 col-md-6">
            <input type="text" name="q" value="@q" class="form-control" placeholder="Search by ID or Name..." />
        </div>
        <div class="col">
            <button class="btn btn-outline-dark rounded-pill">Search</button>
            <a asp-action="Categories" class="btn btn-link">Clear</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:15%;">Category ID</th>
                    <th style="width:25%;">Name</th>
                    <th>Description</th>
                    <th style="width:18%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td class="fw-semibold">@c.CategoryId</td>
                        <td>@c.CategoryName</td>
                        <td class="text-muted">@c.CategoryDescription</td>
                        <td class="text-end">
                            <a asp-action="EditCategory" asp-route-id="@c.CategoryId" class="btn btn-sm btn-outline-dark rounded-pill">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="DeleteCategory" asp-route-id="@c.CategoryId" class="btn btn-sm btn-outline-danger rounded-pill">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
