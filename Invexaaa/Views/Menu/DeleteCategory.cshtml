@model SnomiAssignmentReal.Models.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4" style="max-width:740px;">
    <div class="card p-4 rounded-4">
        <h2 class="h4">Delete Category</h2>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="alert alert-warning">
            <strong>Are you sure?</strong> This will permanently delete <b>@Model.CategoryId — @Model.CategoryName</b>.
        </div>

        <form asp-action="DeleteCategory" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CategoryId" />
            <div class="d-flex gap-2">
                <button class="btn btn-danger rounded-pill"><i class="bi bi-trash"></i> Delete</button>
                <a asp-action="Categories" class="btn btn-outline-dark rounded-pill">Cancel</a>
            </div>
        </form>
    </div>
</div>
