@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SnomiAssignmentReal.Models.ViewModels.SetNewPasswordVm

@{
    ViewData["Title"] = "Set New HashedPassword";
    ViewBag.HideHeader = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    /* Make background fill the whole page */
    html, body {
        height: 100%;
        margin: 0;
        background: #f7f7f7; /* light grey background everywhere */
    }

    /* Centers the card in the viewport */
    .page-center {
        min-height: 100vh; /* full screen height */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }

    /* Auth card */
    .auth-wrap {
        width: 100%;
        max-width: 520px;
        padding: 2rem;
        border: 1.5px solid #0a0a0a;
        border-radius: 16px;
        background: #fff;
        box-shadow: 0 4px 12px rgba(0,0,0,.08);
    }

    /* Titles and text */
    .auth-title {
        font-weight: 800;
        letter-spacing: -.01em;
        margin-bottom: .4rem;
    }

    .auth-sub {
        color: #555;
        margin-bottom: 1.25rem;
    }

    .form-label {
        font-weight: 600;
    }

    /* Input + eye icon in one line */
    .password-group {
        position: relative;
        display: flex;
        align-items: center;
    }

        .password-group input {
            flex: 1;
            padding-right: 2.5rem; /* leave room for eye icon */
        }

        .password-group .toggle-eye {
            position: absolute;
            top: 50%;
            right: .75rem;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 1.15rem;
            color: #666;
            line-height: 1;
            user-select: none;
        }
</style>


<section class="page-center">
    <div class="auth-wrap">
        <h2 class="auth-title">Set a new password</h2>
        <p class="auth-sub">Choose a strong password you don’t use elsewhere.</p>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <form asp-action="SetNewPassword" asp-controller="Customer" method="post" id="setNewPwdForm" novalidate>
            @Html.AntiForgeryToken()

            <!-- Keep token & email so POST can find the row -->
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">New password</label>
                <div class="password-group">
                    <input asp-for="NewPassword" type="password" class="form-control" autocomplete="new-password" id="NewPassword" />
                    <i class="bi bi-eye toggle-eye" data-target="NewPassword" aria-label="Show password" role="button"></i>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm new password</label>
                <div class="password-group">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" id="ConfirmPassword" />
                    <i class="bi bi-eye toggle-eye" data-target="ConfirmPassword" aria-label="Show password" role="button"></i>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-dark w-100">Update Password</button>
        </form>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.querySelectorAll('.toggle-eye').forEach(icon => {
            icon.addEventListener('click', function () {
                const field = document.getElementById(this.dataset.target);
                const show = field.type === 'password';
                field.type = show ? 'text' : 'password';
                this.classList.toggle('bi-eye', !show);
                this.classList.toggle('bi-eye-slash', show);
                this.setAttribute('aria-label', show ? 'Hide password' : 'Show password');
            });
        });
    </script>
}
