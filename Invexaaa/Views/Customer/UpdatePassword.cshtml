@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SnomiAssignmentReal.Models.ViewModels.UpdatePasswordVM

@{
    ViewData["Title"] = "Change HashedPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .auth-wrap {
        max-width: 520px;
        margin: 3rem auto;
        padding: 2rem;
        border: 1.5px solid #0a0a0a;
        border-radius: 16px;
        background: #fff;
    }

    .auth-title {
        font-weight: 800;
        letter-spacing: -.01em;
        margin-bottom: .4rem;
    }

    .auth-sub {
        color: #555;
        margin-bottom: 1.25rem;
    }

    .form-label {
        font-weight: 600;
    }
</style>

<div class="auth-wrap">
    <h2 class="auth-title">Change password</h2>
    <p class="auth-sub">Enter your current password and set a new one.</p>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info">@TempData["Info"]</div>
    }

    <form asp-action="UpdatePassword" asp-controller="Customer" method="post" id="updatePwdForm" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="mb-3">
            <label asp-for="Current" class="form-label">Current password</label>
            <input asp-for="Current" type="password" class="form-control" autocomplete="current-password" />
            <span asp-validation-for="Current" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="New" class="form-label">New password</label>
            <input asp-for="New" type="password" class="form-control" autocomplete="new-password" />
            <span asp-validation-for="New" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Confirm" class="form-label">Confirm new password</label>
            <input id="Confirm" name="Confirm" type="password" class="form-control" autocomplete="new-password" />
            <small id="ConfirmHelp" class="text-danger d-none">Passwords don’t match.</small>
        </div>

        <button type="submit" class="btn btn-dark w-100">Save</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        (function () {
            const form = document.getElementById('updatePwdForm');
            const newPwd = document.getElementById('New');
            const confirm = document.getElementById('Confirm');
            const help = document.getElementById('ConfirmHelp');

            form?.addEventListener('submit', function (e) {
                if (newPwd && confirm && newPwd.value !== confirm.value) {
                    e.preventDefault();
                    help?.classList.remove('d-none');
                    confirm.focus();
                }
            });
        })();
    </script>
}
