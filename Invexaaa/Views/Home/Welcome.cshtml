@{
    ViewBag.Title = "Invexa";
    ViewBag.HideHeader = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --bg: #ffffff;
        --fg: #0a0a0a;
        --font-sans: -apple-system,BlinkMacSystemFont,"SF Pro Text","Segoe UI",Roboto,Arial,sans-serif;
    }

    body {
        background: var(--bg);
    }

    .splash {
        min-height: 100vh;
        display: grid;
        place-items: center;
        background: var(--bg);
        animation: fadeOut 1s ease forwards;
        animation-delay: 2.5s;
    }

    .splash-inner {
        text-align: center;
        animation: fadeIn 1.2s ease forwards;
    }

    .logo-frame {
        width: min(620px, 90vw);
        aspect-ratio: 5 / 2;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logo-img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transform: scale(1.25);
        filter: drop-shadow(0 10px 25px rgba(0,0,0,.08));
        pointer-events: none;
        user-select: none;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes fadeOut {
        to

    {
        opacity: 0;
    }

    }

    @@media (prefers-reduced-motion: reduce) {
        .splash, .splash-inner

    {
        animation: none;
    }

    }
</style>

<div class="splash">
    <div class="splash-inner">
        <div class="logo-frame">
            <img src="@Url.Content("~/images/InvexaLogo.png")"
                 class="logo-img"
                 alt="Snömi Café" />
        </div>
    </div>
</div>

<script>
    // Redirect after splash animation
    setTimeout(() => {
        window.location.href = '@Url.Action("Login", "User")';
    }, 3000); // total duration (fade in + hold + fade out)
</script>
