@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Invexaaa.Models.Invexa.Category

@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --bg: #fff;
        --card: #fff;
        --text: #111;
        --muted: #777;
        --border: #e6e6e6;
        --border-strong: #d6d6d6;
        --radius: 18px;
    }

    body {
        background: var(--bg) !important;
    }

    .page-wrap {
        padding: 18px 22px;
        max-width: 980px;
        margin: 0 auto;
    }

    .page-title {
        text-align: center;
        font-weight: 800;
        letter-spacing: .2px;
        margin: 6px 0 18px;
        font-size: 34px;
        color: var(--text);
    }

    .card-clean {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 22px;
        box-shadow: 0 10px 28px rgba(0,0,0,.06);
        padding: 22px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 18px 20px;
        align-items: start;
    }

    .field {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

        .field.span-2 {
            grid-column: 1 / -1;
        }

    .label {
        font-weight: 700;
        color: var(--text);
        font-size: 15px;
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .req {
        color: #b00020;
        font-weight: 800;
        margin-left: 4px;
    }

    .control {
        width: 100%;
        border: 2px solid var(--border);
        border-radius: var(--radius);
        padding: 14px 16px;
        font-size: 16px;
        color: var(--text);
        background: #fff;
        outline: none;
        transition: border-color .15s ease, box-shadow .15s ease;
    }

        .control:focus {
            border-color: var(--border-strong);
            box-shadow: 0 0 0 4px rgba(0,0,0,.06);
        }

    textarea.control {
        resize: vertical;
        min-height: 120px;
        line-height: 1.35;
    }

    .hint {
        color: var(--muted);
        font-size: 13px;
        margin-top: -2px;
    }

    .text-danger.small {
        margin-top: 2px;
    }

    .actions {
        margin-top: 18px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }

    .btn-black {
        background: #111;
        border: 2px solid #111;
        color: #fff;
        border-radius: 999px;
        padding: 14px 18px;
        font-weight: 800;
        font-size: 16px;
        width: 100%;
    }

        .btn-black:hover {
            filter: brightness(.95);
        }

    .btn-outline {
        background: #fff;
        border: 2px solid #111;
        color: #111;
        border-radius: 999px;
        padding: 14px 18px;
        font-weight: 800;
        font-size: 16px;
        width: 100%;
        text-decoration: none;
        display: inline-flex;
        justify-content: center;
        align-items: center;
    }

        .btn-outline:hover {
            background: #111;
            color: #fff;
        }

    /* Mobile */
    @@media (max-width: 820px) {
        .page-title {
            font-size: 28px;
        }

        .form-grid {
            grid-template-columns: 1fr;
        }

        .actions {
            grid-template-columns: 1fr;
        }
    }

</style>

<div class="page-wrap">
    <div class="page-title">Create Category</div>

    <div class="card-clean">
        <form asp-action="Create" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="form-grid">
                <!-- Category Name -->
                <div class="field">
                    <label asp-for="CategoryName" class="label">
                        Category Name <span class="req">*</span>
                    </label>
                    <input asp-for="CategoryName" class="control" placeholder="e.g., Beverages, Snacks, Toiletries" />
                    <span asp-validation-for="CategoryName" class="text-danger small"></span>
                </div>

                <!-- Status -->
                <div class="field">
                    <label asp-for="CategoryStatus" class="label">
                        Status <span class="req">*</span>
                    </label>
                    <select asp-for="CategoryStatus" class="control">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <div class="hint">Inactive categories can be hidden from selection.</div>
                </div>

                <!-- Description -->
                <div class="field span-2">
                    <label asp-for="CategoryDescription" class="label">Description</label>
                    <textarea asp-for="CategoryDescription"
                              class="control"
                              placeholder="Optional — notes about this category, usage, etc."></textarea>
                </div>
            </div>

            <div class="actions">
                <button type="submit" class="btn-black">Save</button>

                <a asp-action="CategoryIndex" class="btn-outline">Cancel</a>
            </div>
        </form>
    </div>
</div>
