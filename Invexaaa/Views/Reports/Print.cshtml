@model Invexaaa.Models.ViewModels.ReportPrintViewModel
@{
    Layout = null;
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 13px;
        color: #111;
    }

    h1 {
        font-size: 20px;
        margin-bottom: 4px;
    }

    h2 {
        font-size: 16px;
        margin-top: 24px;
        margin-bottom: 8px;
    }

    .meta {
        font-size: 11px;
        color: #555;
        margin-bottom: 16px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 12px;
    }

    th {
        background: #f3f4f6;
        text-align: left;
        font-weight: bold;
        border-bottom: 2px solid #999;
    }

    th, td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    .inactive {
        background: #f0f0f0;
        color: #666;
    }
</style>


<h1>@Model.ReportType Report</h1>

<div class="meta">
    Generated on: @Model.GeneratedOn <br />
    Scope: @Model.ScopeNote
</div>


@if (Model.ReportType == "Stock")
{
    <ul>
        <li>Total Quantity: @Model.TotalQuantityAll</li>
        <li>Active Quantity: @Model.TotalQuantityActive</li>
        <li>Inventory Value: RM @Model.InventoryValueActive.ToString("N2")</li>
    </ul>

    <table>
        <tr><th>Item</th><th>Status</th><th>Quantity</th></tr>
        @foreach (var i in Model.StockSummary!)
        {
            <tr class="@(i.ItemStatus == "Inactive" ? "inactive" : "")">
                <td>@i.ItemName</td>
                <td>@i.ItemStatus</td>
                <td>@i.Quantity</td>
            </tr>
        }
    </table>
}
