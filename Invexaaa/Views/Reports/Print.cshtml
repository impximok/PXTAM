@model Invexaaa.Models.ViewModels.ReportPrintViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.ReportType Report</title>

    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto;
            background: #fff;
            color: #000;
            padding: 40px;
            font-size: 14px;
        }

        h1 {
            font-size: 28px;
            margin-bottom: 6px;
        }

        .meta {
            color: #666;
            margin-bottom: 30px;
        }

        .actions {
            margin-bottom: 30px;
        }

        .btn {
            padding: 8px 16px;
            border: 1px solid #000;
            background: #000;
            color: #fff;
            cursor: pointer;
            font-size: 14px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th, td {
            padding: 10px 12px;
            border-bottom: 1px solid #e5e5e5;
            text-align: left;
        }

        th {
            background: #f5f5f5;
            font-weight: 600;
        }

        @@media print {
            .actions

        {
            display: none;
        }

        }
    </style>
</head>

<body>

    <!-- ACTION BAR (HIDDEN IN PDF) -->
    <form asp-action="ExportPdf" method="post" class="actions">
        @Html.AntiForgeryToken()

        <input type="hidden" name="reportType" value="@Model.ReportType" />
        <input type="hidden" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
        <input type="hidden" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />

        <button type="submit" class="btn">Export PDF</button>
    </form>

    <!-- HEADER -->
    <h1>@Model.ReportType Report</h1>
    <div class="meta">
        Generated on @DateTime.Now.ToString("dd MMM yyyy")
    </div>

    <!-- ================= SALES REPORT ================= -->
    @if (Model.ReportType == "Sales")
    {
        <table>
            <thead>
                <tr>
                    <th>Sales ID</th>
                    <th>Sales Date</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.SalesHeaders!)
                {
                    <tr>
                        <td>@s.SalesID</td>
                        <td>@s.SalesDate.ToString("dd MMM yyyy")</td>
                        <td>@s.TotalAmount.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- ================= DEMAND FORECAST ================= -->
    @if (Model.ReportType == "DemandForecast")
    {
        <table>
            <thead>
                <tr>
                    <th>Item ID</th>
                    <th>Forecast Period</th>
                    <th>Predicted Quantity</th>
                    <th>Recommended Reorder</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.DemandForecasts!)
                {
                    <tr>
                        <td>@d.ItemID</td>
                        <td>@d.DemandForecastPeriod</td>
                        <td>@d.DemandPredictedQuantity</td>
                        <td>@d.DemandRecommendedReorderQty</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- ================= STOCK SUMMARY ================= -->
    @if (Model.ReportType == "Stock")
    {
        <table>
            <thead>
                <tr>
                    <th>Item ID</th>
                    <th>Total Quantity</th>
                    <th>Last Updated</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Inventories!)
                {
                    <tr>
                        <td>@i.ItemID</td>
                        <td>@i.InventoryTotalQuantity</td>
                        <td>@i.InventoryLastUpdated.ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <!-- ================= EXPIRY & WASTAGE ================= -->
    @if (Model.ReportType == "Expiry")
    {
        <table>
            <thead>
                <tr>
                    <th>Batch Number</th>
                    <th>Item ID</th>
                    <th>Quantity</th>
                    <th>Expiry Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model.StockBatches!)
                {
                    <tr>
                        <td>@b.BatchNumber</td>
                        <td>@b.ItemID</td>
                        <td>@b.BatchQuantity</td>
                        <td>@b.BatchExpiryDate.ToString("dd MMM yyyy")</td>
                        <td>@b.BatchStatus</td>
                    </tr>
                }
            </tbody>
        </table>
    }

</body>
</html>
