@model IEnumerable<Invexaaa.Models.ViewModels.ExpiryTrackingViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Expiry Tracking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .expiry-safe {
        background: #e6f7ec;
        color: #15803d;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
    }

    .expiry-warning {
        background: #fff7ed;
        color: #b45309;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
    }

    .expiry-danger {
        background: #fee2e2;
        color: #b91c1c;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
    }

    /* 🔒 Inactive rows */
    .inactive-row {
        opacity: 0.55;
        filter: grayscale(100%);
    }

    .inactive-badge {
        background: #e5e7eb;
        color: #374151;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
    }
</style>

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold">Expiry Tracking</h3>
        <span class="text-muted small">
            Batch-level expiry monitoring
        </span>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-secondary small">
                    <tr>
                        <th>Item</th>
                        <th>Category</th>
                        <th>Batch</th>
                        <th>Expiry Date</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th style="width:140px">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var row in Model)
                    {
                        bool isInactive = row.ItemStatus == "Inactive";

                        string statusClass =
                        row.ExpiryStatus == "Expired" ? "expiry-danger" :
                        row.ExpiryStatus == "Near Expiry" ? "expiry-warning" :
                        "expiry-safe";

                        <tr class="@(isInactive ? "inactive-row" : "")">
                            <td class="fw-semibold">
                                @row.ItemName
                                @if (isInactive)
                                {
                                    <div class="mt-1">
                                        <span class="inactive-badge">INACTIVE</span>
                                    </div>
                                }
                            </td>

                            <td>@row.CategoryName</td>

                            <td>@row.BatchNumber</td>

                            <td>@row.ExpiryDate.ToString("dd/MM/yyyy")</td>

                            <td>@row.Quantity</td>

                            <td>
                                <span class="@statusClass">
                                    @row.ExpiryStatus
                                </span>
                            </td>

                            <td>
                                @if (isInactive)
                                {
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        Locked
                                    </button>
                                }
                                else
                                {
                                    <a asp-controller="Stock"
                                       asp-action="EditExpiry"
                                       asp-route-batchId="@row.BatchID"
                                       class="btn btn-sm btn-outline-primary">
                                        Edit
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
