@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Invexaaa.Models.Invexa.ExpiryTrackingViewModel>

@{
    ViewData["Title"] = "Expiry Tracking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-semibold mb-0">Expiry Tracking</h3>
    </div>

    <!-- FILTERS -->
    <form method="get" class="row g-2 mb-4">

        <div class="col-md-3">
            <input type="text"
                   name="search"
                   value="@Context.Request.Query["search"]"
                   class="form-control form-control-sm"
                   placeholder="Search item..." />
        </div>

        <div class="col-md-2">
            <select name="categoryId" class="form-select form-select-sm">
                <option value="">All Categories</option>
                @foreach (var c in ViewBag.Categories)
                {
                    <option value="@c.CategoryID"
                            selected="@(Context.Request.Query["categoryId"] == c.CategoryID.ToString())">
                        @c.CategoryName
                    </option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <select name="expiryStatus" class="form-select form-select-sm">
                <option value="">All Status</option>
                <option value="Safe" selected="@(Context.Request.Query["expiryStatus"] == "Safe")">Safe</option>
                <option value="Near Expiry" selected="@(Context.Request.Query["expiryStatus"] == "Near Expiry")">Near Expiry</option>
                <option value="Expired" selected="@(Context.Request.Query["expiryStatus"] == "Expired")">Expired</option>
            </select>
        </div>

        <div class="col-md-2">
            <select name="expiryRange" class="form-select form-select-sm">
                <option value="">Any Date</option>
                <option value="7" selected="@(Context.Request.Query["expiryRange"] == "7")">Next 7 Days</option>
                <option value="30" selected="@(Context.Request.Query["expiryRange"] == "30")">Next 30 Days</option>
            </select>
        </div>

        <div class="col-md-2">
            <button type="submit"
                    class="btn btn-sm btn-outline-dark w-100">
                Apply
            </button>
        </div>

    </form>

    <!-- TABLE -->
    <div class="border rounded">
        <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
                <thead class="border-bottom small text-muted">
                    <tr>
                        <th>ID</th>
                        <th>Item</th>
                        <th>Category</th>
                        <th>Batch</th>
                        <th class="text-end">Qty</th>
                        <th>Expiry</th>
                        <th>Status</th>
                        <th class="text-end">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BatchID</td>

                                <td class="fw-medium">
                                    @item.ItemName
                                </td>

                                <td class="text-muted">
                                    @item.CategoryName
                                </td>

                                <td>
                                    @item.BatchNumber
                                </td>

                                <td class="text-end fw-medium">
                                    @item.Quantity
                                </td>

                                <td>
                                    @item.ExpiryDate.ToString("dd/MM/yyyy")
                                </td>

                                <td>
                                    <span class="badge border text-dark fw-normal">
                                        @item.ExpiryStatus
                                    </span>
                                </td>

                                <td class="text-end">
                                    <a asp-controller="Stock"
                                       asp-action="EditExpiry"
                                       asp-route-batchId="@item.BatchID"
                                       class="btn btn-sm btn-outline-dark">
                                        Edit
                                    </a>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8"
                                class="text-center text-muted py-4">
                                No expiry records found.
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
