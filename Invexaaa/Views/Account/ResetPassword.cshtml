@model SnomiAssignmentReal.Models.ViewModels.ResetPasswordVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Reset HashedPassword";
    ViewBag.HideHeader = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="full-page-wrapper">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="reset-card-apple">
            <div class="text-center mb-4">
                <h2 class="reset-title-apple">Reset Password</h2>
                <p class="reset-desc-apple">We'll send a reset link to your email.</p>
            </div>

            @if (TempData["Info"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Info"]</div>
            }

            <form asp-action="ResetPassword" method="post" autocomplete="off">
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control minimalist-input" placeholder="Email address" />
                    <label asp-for="Email">Email address</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <button type="submit" class="btn-black-apple w-100">
                    Send Reset Link
                </button>
            </form>

            <div class="text-center mt-4">
                <a href="/Account/Login" class="forgot-link-apple">← Back to Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: -apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Helvetica,Arial,sans-serif;
        background: #f7f7fa !important;
        color: #1a1a1a;
        font-size: 1.04rem;
        letter-spacing: 0.1px;
    }

    .full-page-wrapper {
        min-height: 100vh;
        background: #f7f7fa !important;
    }

    .reset-card-apple {
        background: #fff;
        border-radius: 1.45rem;
        box-shadow: 0 4px 32px rgba(0,0,0,0.07);
        max-width: 410px;
        width: 100%;
        margin: 0 auto;
        padding: 2.6rem 2.25rem 2.2rem 2.25rem;
        border: none;
        transition: box-shadow .2s;
    }

    .reset-title-apple {
        font-weight: 700;
        font-size: 2.05rem;
        letter-spacing: 0.4px;
        margin-bottom: 0.3rem;
        color: #111;
    }

    .reset-desc-apple {
        color: #444;
        font-size: 1.08rem;
        margin-bottom: 0.8rem;
        margin-top: 0;
        font-weight: 400;
    }

    .form-floating > .form-control,
    .form-control.minimalist-input {
        border-radius: 0.9rem !important;
        background-color: #fff;
        border: 1.2px solid #d3d3d3;
        font-size: 1.11rem;
        padding: 1.08rem 1.08rem 0.38rem 1.08rem;
        color: #111;
        min-height: 51px;
        box-shadow: none;
        font-weight: 500;
        transition: border-color 0.17s;
    }

    .form-control:focus {
        border-color: #000;
        background-color: #fff;
    }

    .btn-black-apple {
        background: #111;
        color: #fff;
        border: none;
        border-radius: 999px;
        padding: 0.92rem 0;
        font-size: 1.13rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        margin-top: 0.7rem;
        margin-bottom: 0.4rem;
        width: 100%;
        box-shadow: 0 1.5px 8px rgba(0,0,0,0.03);
        transition: background 0.19s, color 0.18s;
    }

        .btn-black-apple:hover,
        .btn-black-apple:focus {
            background: #fff;
            color: #111;
            border: 1.8px solid #111;
            outline: none;
        }

    .forgot-link-apple {
        color: #6c757d;
        text-decoration: none;
        font-size: 1.03rem;
        font-weight: 400;
        display: inline-block;
        transition: color 0.17s;
        margin-top: 0.8rem;
    }

        .forgot-link-apple:hover,
        .forgot-link-apple:focus {
            color: #111;
            text-decoration: underline;
            cursor: pointer;
        }

    .alert-success {
        font-size: 0.96rem;
        border-radius: 1rem;
        border: 2px dashed #3fc46c;
        background: #f4fff6;
        color: #217a42;
        box-shadow: 0 2px 10px rgba(20,20,20,0.06);
        margin-bottom: 1.1rem;
        margin-top: -0.5rem;
    }
</style>
