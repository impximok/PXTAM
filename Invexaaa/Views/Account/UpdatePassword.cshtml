
@model SnomiAssignmentReal.Models.ViewModels.UpdatePasswordVM
@{
    ViewData["Title"] = "Update HashedPassword";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-pink text-white text-center rounded-top-4">
                    <h3 class="mb-0">🔒 Update Password</h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Info"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["Info"]
                        </div>
                    }

                    <form asp-action="UpdatePassword" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Current" class="form-label">Current Password</label>
                            <input asp-for="Current" class="form-control" type="password" />
                            <span asp-validation-for="Current" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="New" class="form-label">New Password</label>
                            <input asp-for="New" class="form-control" type="password" />
                            <span asp-validation-for="New" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Confirm" class="form-label">Confirm New Password</label>
                            <input asp-for="Confirm" class="form-control" type="password" />
                            <span asp-validation-for="Confirm" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-pill">💾 Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class="text-muted">🔙 Back to Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .bg-pink {
        background-color: #f78fb3;
    }

    .card {
        background-color: #fff0f5;
    }

    .btn-primary {
        background-color: #f78fb3;
        border-color: #f78fb3;
    }

        .btn-primary:hover {
            background-color: #e26ea4;
            border-color: #e26ea4;
        }
</style>
