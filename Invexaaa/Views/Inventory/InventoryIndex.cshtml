@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Invexaaa.Models.ViewModels.InventoryOverviewViewModel>

@{
    ViewData["Title"] = "Inventory Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .inventory-health {
        font-weight: 600;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 13px;
    }

    .health-healthy {
        background: #e6f7ec;
        color: #15803d;
    }

    .health-low {
        background: #fff7ed;
        color: #b45309;
    }

    .health-critical {
        background: #fee2e2;
        color: #b91c1c;
    }

    /* 🔒 Inactive row styling */
    .inactive-row {
        opacity: 0.55;
        background: #f1f5f9;
    }

    .inactive-badge {
        background: #e5e7eb;
        color: #374151;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
    }
</style>

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold">Inventory Overview</h3>
        <span class="text-muted small">
            Management & Planning View
        </span>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-secondary small">
                    <tr>
                        <th>Item</th>
                        <th>Total Quantity</th>
                        <th>Health</th>
                        <th>Last Updated</th>
                        <th style="width:140px">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var inv in Model)
                    {
                        bool isInactive = inv.ItemStatus == "Inactive";

                        var healthClass =
                        inv.HealthStatus == "Healthy" ? "health-healthy" :
                        inv.HealthStatus == "Low" ? "health-low" :
                        inv.HealthStatus == "Critical" ? "health-critical" :
                        "";

                        <tr class="@(isInactive ? "inactive-row" : "")">
                            <td class="fw-semibold">
                                @inv.ItemName
                                @if (isInactive)
                                {
                                    <div class="mt-1">
                                        <span class="inactive-badge">INACTIVE</span>
                                    </div>
                                }
                            </td>

                            <td>@inv.TotalQuantity</td>

                            <td>
                                @if (isInactive)
                                {
                                    <span class="inventory-health inactive-badge">
                                        Locked
                                    </span>
                                }
                                else
                                {
                                    <span class="inventory-health @healthClass">
                                        @inv.HealthStatus
                                    </span>
                                }
                            </td>

                            <td>@inv.LastUpdated.ToString("dd/MM/yyyy")</td>

                            <td>
                                @if (isInactive)
                                {
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        Locked
                                    </button>
                                }
                                else
                                {
                                    <a asp-controller="Stock"
                                       asp-action="StockIndex"
                                       class="btn btn-sm btn-outline-primary">
                                        View Stock
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>
