@model Invexaaa.Models.ViewModels.ItemCardViewModel

<a href="/Item/ItemDetail/@Model.ItemID"
   class="item-card-link"
   style="text-decoration:none; color:inherit;">

    <div class="card h-100 shadow-sm item-card">

        <!-- ITEM IMAGE -->
        <img src="@(string.IsNullOrWhiteSpace(Model.ItemImageUrl)
                                  ? "/images/no-image.png"
                                  : Model.ItemImageUrl)"
             class="card-img-top"
             style="height:180px; object-fit:contain;" />

        <div class="card-body">

            <!-- NAME + STATUS -->
            <div class="d-flex justify-content-between align-items-start mb-2">
                <h6 class="fw-bold mb-0">@Model.ItemName</h6>
                <span class="badge @(Model.ItemStatus == "Active" ? "bg-success" : "bg-secondary")">
                    @Model.ItemStatus
                </span>
            </div>

            <!-- CATEGORY + SUPPLIER -->
            <small class="text-muted d-block">@Model.CategoryName</small>
            <small class="text-muted d-block mb-2">@Model.SupplierName</small>

            <!-- PRICE -->
            <div class="fw-semibold mb-2">
                RM @Model.ItemSellPrice.ToString("0.00")
            </div>

            <!-- INVENTORY INFO -->
            <div class="small text-muted mb-2">
                Balance: @Model.CurrentBalance <br />
                Reorder Level: @Model.ReorderLevel
            </div>

            <!-- BARCODE TEXT -->
            @if (!string.IsNullOrEmpty(Model.ItemBarcode))
            {
                <div class="small text-muted">
                    Barcode:
                    <span class="fw-semibold">@Model.ItemBarcode</span>
                </div>
            }

        </div>

    </div>
</a>
