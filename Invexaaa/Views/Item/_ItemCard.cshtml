@model Invexaaa.Models.ViewModels.ItemCardViewModel

<div class="card h-100 shadow-sm item-card
     @(Model.ItemStatus == "Inactive" ? "inactive-card" : "")">

    <!-- CLICKABLE CONTENT -->
    <a href="@(Model.ItemStatus == "Active" ? $"/Item/ItemDetail/{Model.ItemID}" : "javascript:void(0)")"
       class="item-card-link @(Model.ItemStatus == "Inactive" ? "disabled-link" : "")">

        <!-- ITEM IMAGE -->
        <img src="@(string.IsNullOrWhiteSpace(Model.ItemImageUrl)
                                  ? "/images/no-image.png"
                                  : Model.ItemImageUrl)"
             class="card-img-top"
             style="height:180px; object-fit:contain;" />

        <div class="card-body">

            <!-- NAME + STATUS -->
            <div class="d-flex justify-content-between align-items-start mb-2">
                <h6 class="fw-bold mb-0">@Model.ItemName</h6>
                <span class="badge @(Model.ItemStatus == "Active" ? "bg-success" : "bg-secondary")">
                    @Model.ItemStatus
                </span>
            </div>

            <!-- CATEGORY + SUPPLIER -->
            <small class="text-muted d-block">@Model.CategoryName</small>
            <small class="text-muted d-block mb-2">@Model.SupplierName</small>

            <!-- PRICE -->
            <div class="fw-semibold mb-2">
                RM @Model.ItemSellPrice.ToString("0.00")
            </div>

            <!-- INVENTORY INFO -->
            <div class="small text-muted mb-2">
                Balance: @Model.CurrentBalance <br />
                Reorder Level: @Model.ReorderLevel
            </div>

            <!-- BARCODE -->
            @if (!string.IsNullOrEmpty(Model.ItemBarcode))
            {
                <div class="small text-muted">
                    Barcode:
                    <span class="fw-semibold">@Model.ItemBarcode</span>
                </div>
            }

        </div>
    </a>

    <!-- ACTION BUTTONS -->
    <div class="card-footer bg-white border-top d-flex justify-content-between gap-2">

        <a href="/Item/EditItem/@Model.ItemID"
           class="btn btn-sm btn-outline-primary w-50
                  @(Model.ItemStatus == "Inactive" ? "disabled-btn" : "")">
            <i class="bi bi-pencil-square"></i> Edit
        </a>

        <a href="/Item/DeactivateItem/@Model.ItemID"
           class="btn btn-sm btn-outline-warning w-50
                  @(Model.ItemStatus == "Inactive" ? "disabled-btn" : "")">
            <i class="bi bi-slash-circle"></i> Deactivate
        </a>

    </div>
</div>

        <style>
    /* ============================= */
    /* INACTIVE ITEM CARD STYLING */
    /* ============================= */

    .inactive-card {
        opacity: 0.55;
        filter: grayscale(100%);
        background-color: #f8f9fa;
    }

    /* Disable clicking on card */
    .disabled-link {
        pointer-events: none;
        cursor: not-allowed;
    }

    /* Disable buttons */
    .disabled-btn {
        pointer-events: none;
        opacity: 0.6;
    }

    /* Optional visual cue */
    .inactive-card::after {
        content: "INACTIVE";
        position: absolute;
        top: 10px;
        left: 10px;
        background: #6c757d;
        color: white;
        font-size: 0.7rem;
        padding: 2px 6px;
        border-radius: 4px;
        z-index: 5;
    }

        </style>