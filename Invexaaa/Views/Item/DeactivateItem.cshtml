@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Invexaaa.Models.Invexa.Item

@{
    ViewData["Title"] = "Deactivate Item";
}

<h2 class="text-warning mb-4">Deactivate Item</h2>

<div class="alert alert-warning">
    This item will be <strong>deactivated</strong>.
</div>

<form asp-controller="Item"
      asp-action="DeactivateItem"
      asp-route-id="@Model.ItemID"
      method="post">
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-warning">
        Confirm Deactivation
    </button>
</form>

@if (User.IsInRole("Admin"))
{
    <a asp-controller="Item"
       asp-action="ForceDeleteConfirm"
       asp-route-id="@Model.ItemID"
       class="btn btn-danger mt-3">
        Force Delete (Admin Only)
    </a>
}
