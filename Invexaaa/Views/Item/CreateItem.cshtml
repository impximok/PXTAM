@model Invexaaa.Models.ViewModels.ItemFormViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add New Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .add-item-container {
        display: grid;
        grid-template-columns: 320px 1fr;
        gap: 30px;
        padding: 25px;
    }

    .photo-card,
    .form-card {
        background: #ffffff;
        border-radius: 14px;
        padding: 22px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.06);
    }

        .photo-card h4 {
            margin-bottom: 12px;
            font-weight: 600;
        }

    .photo-preview {
        height: 220px;
        border: 2px dashed #dcdcdc;
        border-radius: 10px;
        background: #fafafa;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
    }

        .photo-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

    .upload-btn {
        display: block;
        text-align: center;
        background: #f1f1f1;
        padding: 10px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .form-card h3 {
        margin-bottom: 20px;
        font-weight: 600;
    }

    label {
        font-size: 0.8rem;
        color: #666;
        margin-bottom: 4px;
    }

    input, select {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ddd;
        margin-bottom: 12px;
        font-size: 0.9rem;
    }

        input:focus, select:focus {
            outline: none;
            border-color: #999;
        }

    .grid-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .grid-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
    }

    .save-btn {
        margin-top: 18px;
        width: 100%;
        padding: 12px;
        background: #6c757d;
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
    }

        .save-btn:hover {
            background: #5a6268;
        }

    .text-danger {
        font-size: 0.75rem;
    }

    @@media (max-width: 900px) {
        .add-item-container

    {
        grid-template-columns: 1fr;
    }

    }
</style>

<div class="add-item-container">

    <!-- LEFT : IMAGE -->
    <div class="photo-card">
        <h4>Photo</h4>

        <div class="photo-preview">
            <img id="previewImage" src="~/images/placeholder.png" alt="Preview" />
        </div>

        <label class="upload-btn">
            ⬆ Upload Image
            <input type="file"
                   name="ItemImage"
                   hidden
                   accept="image/*"
                   onchange="previewImage(this)" />
        </label>
    </div>

    <!-- RIGHT : FORM -->
    <div class="form-card">
        <h3>Add New Item</h3>

        <form asp-action="CreateItem" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <!-- Name & Unit -->
            <div class="grid-2">
                <div>
                    <label>Item Name</label>
                    <input asp-for="Item.ItemName" />
                    <span asp-validation-for="Item.ItemName" class="text-danger"></span>
                </div>

                <div>
                    <label>Unit of Measure</label>
                    <input asp-for="Item.ItemUnitOfMeasure" />
                    <span asp-validation-for="Item.ItemUnitOfMeasure" class="text-danger"></span>
                </div>
            </div>

            <!-- Category & Supplier -->
            <div class="grid-2">
                <div>
                    <label>Category</label>
                    <select asp-for="Item.CategoryID"
                            asp-items="@(new SelectList(Model.Categories, "CategoryID", "CategoryName"))">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="Item.CategoryID" class="text-danger"></span>
                </div>

                <div>
                    <label>Supplier</label>
                    <select asp-for="Item.SupplierID"
                            asp-items="@(new SelectList(Model.Suppliers, "SupplierID", "SupplierName"))">
                        <option value="">Select Supplier</option>
                    </select>
                    <span asp-validation-for="Item.SupplierID" class="text-danger"></span>
                </div>
            </div>

            <!-- Barcode (Auto Generated) -->
            <div style="margin-bottom:12px;">
                <label>Barcode</label>
                <div style="
        background:#f8f9fa;
        border:1px dashed #ccc;
        border-radius:8px;
        padding:10px;
        font-size:0.85rem;
        color:#555;
    ">
                    🔒 Barcode will be automatically generated after saving the item.
                </div>
            </div>

            <!-- Prices -->
            <div class="grid-2">
                <div>
                    <label>Buy Price</label>
                    <input asp-for="Item.ItemBuyPrice" />
                    <span asp-validation-for="Item.ItemBuyPrice" class="text-danger"></span>
                </div>

                <div>
                    <label>Sell Price</label>
                    <input asp-for="Item.ItemSellPrice" />
                    <span asp-validation-for="Item.ItemSellPrice" class="text-danger"></span>
                </div>
            </div>

            <!-- Inventory Planning -->
            <div class="grid-3">
                <div>
                    <label>Reorder Level</label>
                    <input asp-for="Item.ItemReorderLevel" />
                    <span asp-validation-for="Item.ItemReorderLevel" class="text-danger"></span>
                </div>

                <div>
                    <label>Safety Stock</label>
                    <input asp-for="Item.SafetyStock" />
                    <span asp-validation-for="Item.SafetyStock" class="text-danger"></span>
                </div>

                <div>
                    <label>Reorder Point</label>
                    <input asp-for="Item.ReorderPoint" />
                    <span asp-validation-for="Item.ReorderPoint" class="text-danger"></span>
                </div>
            </div>

            <!-- Forecast -->
            <label>Average Daily Demand</label>
            <input asp-for="Item.AverageDailyDemand" />
            <span asp-validation-for="Item.AverageDailyDemand" class="text-danger"></span>

            <button type="submit" class="save-btn">
                Save Item
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => document.getElementById('previewImage').src = e.target.result;
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
